@model Merchant.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="row">
        <div style="height:18rem; width:16rem; overflow:hidden">
            <img src="@Model.ImageLink" style="width: 100%; height: 100%; object-fit: cover" />
        </div>
        <p></p>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            $@Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Cart" asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary ms-lg-3">Add to cart?</a>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary ms-lg-3">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger ms-lg-3">Delete</a>
</div>
